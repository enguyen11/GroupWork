<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_existing_games"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_campaign_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:paddingEnd="8dp"
                android:text="@string/string_placeholder"
                android:textColor="#222222"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_campaign_name2"
                app:layout_constraintTop_toTopOf="@+id/textView_campaign_name2" />

            <TextView
                android:id="@+id/textView_game_character2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/string_role"
                android:textColor="#311B92"
                app:layout_constraintStart_toStartOf="@+id/textView_campaign_name2"
                app:layout_constraintTop_toBottomOf="@+id/textView_campaign_name2" />

            <TextView
                android:id="@+id/textView_campaign_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="@string/string_campaign_name"
                android:textColor="#311B92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_game_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:paddingEnd="8dp"
                android:text="@string/string_placeholder"
                android:textColor="#222222"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView_game_character"
                app:layout_constraintTop_toTopOf="@+id/textView_game_system2" />

            <TextView
                android:id="@+id/textView_game_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="@string/string_placeholder"
                android:textColor="#222222"
                app:layout_constraintStart_toStartOf="@+id/textView_campaign_name"
                app:layout_constraintTop_toTopOf="@+id/textView_game_character2" />

            <TextView
                android:id="@+id/textView_game_system2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/string_rpg_system"
                android:textColor="#311B92"
                app:layout_constraintStart_toStartOf="@+id/textView_game_character2"
                app:layout_constraintTop_toBottomOf="@+id/textView_game_character2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>