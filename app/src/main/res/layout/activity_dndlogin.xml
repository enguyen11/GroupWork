<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StickerActivity.Firebase">

    <EditText
        android:id="@+id/editText_DnDUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/username_text"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_DnD_login"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Please_Enter_DnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_please_enter_your_username"
        app:layout_constraintBottom_toTopOf="@+id/editText_DnDUsername"
        app:layout_constraintEnd_toEndOf="@+id/editText_DnDUsername"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/editText_DnDUsername" />

    <Button
        android:id="@+id/button_DnD_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_login"
        app:layout_constraintBottom_toBottomOf="@+id/editText_DnDUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_DnDUsername"
        app:layout_constraintTop_toTopOf="@+id/editText_DnDUsername" />

</androidx.constraintlayout.widget.ConstraintLayout>